{
    "name": "my/php-starter",
    "description": "A simple PHP starter project",
    "keywords": [
      "template",
      "view",
      "render"
    ],
    "license": "MIT",
    "authors": [
      {
        "name": "Maratib Ali Khan",
        "homepage": "https://maratib.github.io"
      }
    ],
    "require": {
      "php": ">=8.0"
    },

    "require-dev": {
        "phpunit/phpunit": "^12.1",
        "laravel/pint": "^1.22"
    },
   
    "scripts": {
          "test": "vendor/bin/phpunit",
          "lint": "vendor/bin/pint --test",
          "fix": "vendor/bin/pint"
      },
    "autoload": {
        "psr-4": {
            "App\\": "src",
            "App\\Core\\": "src/core"
        }      
    },
    "minimum-stability": "dev",
    "prefer-stable": true
   
}
